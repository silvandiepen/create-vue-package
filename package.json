{
  "name": "create-vue-package",
  "version": "0.0.7",
  "description": "Vue Component and Directive Packager",
  "main": "cli.js",
  "bin": "cli.js",
  "files": [
    "cli.js",
    "saofile.js",
    "template/"
  ],
  "scripts": {
    "test:cov": "npm run lint",
    "test": "npm run lint",
    "lint": "standard",
    "prepublishOnly": "npm run build",
    "build": "bili",
    "try": "rm -rf test-package && node cli.js test-package"
  },
  "repository": {
    "url": "silvandiepen/create-vue-package",
    "type": "git"
  },
  "author": "silvandiepen<me@silvandiepen.com>",
  "license": "MIT",
  "dependencies": {
    "sao": "^1.6.1"
  },
  "devDependencies": {
    "bili": "^3.3.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.0",
    "prettier": "^1.15.2",
    "standard": "^12.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js, !template/**": [
      "standard --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
